<UserControl x:Class="CopyrightHelper.ConfigToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Name="MyToolWindow">
    <UserControl.Resources>
        <RoutedCommand x:Key="Cmd" CanExecuteChanged="Cmd_CanExecuteChanged"  />
    </UserControl.Resources>
    <UserControl.CommandBindings>
        <CommandBinding  CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed" Command="{StaticResource Cmd}" />
    </UserControl.CommandBindings>
    <Grid>
        <TabControl >
            <TabItem Header="配置">
                <Grid>
                    <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="261" >
                        <TextBox x:Name="txtInput" Margin="10,10,10,10" Width="100" BorderBrush="Black" Text="*.*" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
                        <Button Content="增加" Width="60" Margin="0,5,0,5" Command="{DynamicResource Cmd}" CommandParameter="Add"/>
                        <Button Content="删除" Width="60" Margin="10,5,0,5" Command="{DynamicResource Cmd}" CommandParameter="Del"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" Margin="283,0,0,0" HorizontalAlignment="Left" Width="261" >
                        <Button Content="保存" Width="60" Margin="0,5,0,5" Command="{DynamicResource Cmd}" CommandParameter="Save"/>
                        <Button Content="清空" Width="60" Margin="10,5,0,5" Command="{DynamicResource Cmd}" CommandParameter="Clear"/>
                    </StackPanel>
                    <ListBox x:Name="lbType" Margin="0,55,0,10"  HorizontalAlignment="Left" Width="150" BorderBrush="#FF7D899E" />
                    <TextBox x:Name="txtContent" Margin="162,55,10,10" UndoLimit="10" BorderThickness="2" BorderBrush="#FF9B9B9B" />
                </Grid>

            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
